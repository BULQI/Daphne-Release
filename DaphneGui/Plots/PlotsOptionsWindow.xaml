<Window x:Class="DaphneGui.Plots.PlotOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
        xmlns:plot="clr-namespace:DaphneGui.Plots"
        Title="Plot Options"
        Loaded="Window_Loaded"
        >

    <ScrollViewer x:Name="scrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20" >
        <Grid>
            <StackPanel x:Name="PlotMainStackPanel" >
                <plot:PlotOptions x:Name="plotOptions" ></plot:PlotOptions>
            </StackPanel>
        </Grid>
    </ScrollViewer>
    
</Window>
