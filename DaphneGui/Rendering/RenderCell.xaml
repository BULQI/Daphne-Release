                <ComboBox Height="23" Margin="20, 0" Name="TypeComboBox" Width="220" SelectedIndex="0" SelectionChanged="comboBox1_SelectionChanged">
                    <ComboBoxItem Content="Cell Type" />
                    <ComboBoxItem Content="Cell State" />
                    <ComboBoxItem Content="Cell Generation" />
                    <ComboBoxItem Content="Cell State Shade" />
                    <ComboBoxItem Content="Cell Generation Shade" />
                </ComboBox>
            </StackPanel>
            <!--<ContentControl Name="EntityLevelDetails"
                        Content="{Binding}" 
