<Window x:Class="DaphneGui.Rendering.RenderCell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:rend="clr-namespace:DaphneGui.Rendering"
        Title="Cell Population Rendering Options " Height="340" Width="516">
    
    <Window.Resources>
                
        <!--<rend:RenderTemplateSelector x:Key="renderTemplateSelector"
            ByPopTemplate="{StaticResource byPopTemplate}" 
            ByStateTemplate="{StaticResource byStateTemplate}" 
            ByGenTemplate="{StaticResource byGenTemplate}"
             />-->
