<docking:DocumentWindow x:Class="Workbench.ChartViewToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:docking="http://schemas.actiprosoftware.com/winfx/xaml/docking"        
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"                                              
        >
  
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" >
        <Grid x:Name="ChartMainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>                
                <RowDefinition Height="32"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                <Button x:Name="btnIncSize" Width="70" Height="24" HorizontalAlignment="Left" Click="btnIncSize_Click" >Bigger</Button>
                <Button x:Name="btnDecSize" Width="70" Height="24" HorizontalAlignment="Left" Click="btnDecSize_Click">Smaller</Button>
                <Button x:Name="btnSave"    Width="80" Height="24" HorizontalAlignment="Left"   Click="btnSave_Click" >Save Changes</Button>
                <Button x:Name="btnDiscard" Width="100" Height="24" HorizontalAlignment="Left"  Click="btnDiscard_Click" >Discard Changes</Button>
            </StackPanel>

            <!--<TextBlock Grid.Column="0" Grid.Row="1">Mouse Down Pos:</TextBlock>
        <TextBox x:Name="txtMouseClick" Grid.Column="1" Grid.Row="1" Width="150" HorizontalAlignment="Left" >Mouse down</TextBox>
        <TextBlock Grid.Column="2" Grid.Row="1">Mouse Up Pos:</TextBlock>
        <TextBox x:Name="txtMouseUp" Grid.Column="3" Grid.Row="1" Width="150" HorizontalAlignment="Left" >Mouse up</TextBox> -->

            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Visibility="Hidden">
                <TextBlock >Dragging Concentration:</TextBlock>
                <TextBox x:Name="txtMouseHover" Width="150" HorizontalAlignment="Left" >Dragging Conc</TextBox>
            </StackPanel>

            <!--<ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4">
            <WindowsFormsHost Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" Margin="20" Name="windowsFormsHost1">
                <wf:Panel x:Name="pChartMolConcs"/>
            </WindowsFormsHost>
        </ScrollViewer>-->

            <!--<TabControl Height="554" HorizontalAlignment="Left" Margin="138,6,0,0" Name="tabControl1" VerticalAlignment="Top" Width="697">
        <TabItem Header="Testing" x:Name="tb_Testing">
            <Grid>
                <WindowsFormsHost Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" Margin="20" Name="windowsFormsHost1">            
                    <wf:Panel x:Name="pChartMolConcs" AutoScroll="True"/>
                </WindowsFormsHost>
            </Grid>
        </TabItem>
        </TabControl>-->


            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
                <TextBlock VerticalAlignment="Center" >Maximum time (seconds):</TextBlock>
                <Slider x:Name="slMaxTime" Width="50"  Minimum="0.0" Maximum="10.0"  Margin="10,0,0,0" 
                        VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="slMaxTime_ValueChanged"
                        Value="{Binding Path=dInitialTime}"                        
                        TickFrequency="0.1">
                </Slider>
                <TextBox x:Name="txtMaxTime" Width="50" Height="24" HorizontalAlignment="Left" Margin="10,0,0,0"  VerticalAlignment="Center" 
                      Text="{Binding ElementName=slMaxTime, Path=Value}">
                </TextBox>
            </StackPanel>

            <!--<TabControl Grid.Column="0" Grid.Row="0" Height="360" HorizontalAlignment="Left" Margin="0,0,0,0" Name="tabControl1" VerticalAlignment="Top" Width="500" ClipToBounds="True">
            <TabItem  x:Name="tb_Testing">-->
            <!--<Grid>-->

            
            <WindowsFormsHost Margin="0,0,0,0" Name="windowsFormsHost1" ClipToBounds="True" Grid.Column="0" Grid.Row="3"> 
                
                <wf:Panel x:Name="pChartMolConcs" Visible="False" />
                
            </WindowsFormsHost>
            

            <!--</Grid>-->
            <!--</TabItem>
        </TabControl>-->

        </Grid>
    </ScrollViewer>

</docking:DocumentWindow>
