<Window x:Class="DaphneGui.PushMolecule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:daph="clr-namespace:Daphne;assembly=Daphne"
        xmlns:local="clr-namespace:DaphneGui"
        Title="Push/Save Molecule" Height="500" Width="1100" >

    <Window.Resources>
        <!--<daph:PushTypeToStringConverter x:Key="PushTypeToStringConv" />-->

        <ObjectDataProvider x:Key="pushTypesList"
                    MethodName="GetValues" 
                    ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="daph:PushType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20,0">
            <StackPanel Width="500" HorizontalAlignment="Left">
                <Label FontWeight="Bold" FontSize="16">Level A (From)</Label>
                <ComboBox Height="28" x:Name="LevelAComboBox" ItemsSource="{Binding Source={StaticResource pushTypesList}}" />
                <local:MoleculeGridControl x:Name="LevelADataGrid" Margin="0,10"  VerticalAlignment="Top" DataContext="{Binding Path=Protocol.entity_repository}"/>
            </StackPanel>
            <StackPanel x:Name="StackPanelB" Width="500" Margin="20,0">
                <Label FontWeight="Bold" FontSize="16" Content="Level B (To)" />
                <ComboBox Height="28" x:Name="LevelBComboBox" ItemsSource="{Binding Source={StaticResource pushTypesList}}" />
                <local:MoleculeGridControl x:Name="LevelBDataGrid" Margin="0,10" VerticalAlignment="Top" DataContext="{Binding Path=Protocol.entity_repository}"/>
            </StackPanel>            
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="0,20" HorizontalAlignment="Right">
            <Button Content="Save Molecule to Components Level" Height="24" Margin="10,0" Name="SaveButton" VerticalAlignment="Top" Width="243" />
            <Button Content="Cancel" Height="24" Margin="10,0" Name="CancelButton" VerticalAlignment="Top" Width="75" />
        </StackPanel>
        
    </StackPanel>


