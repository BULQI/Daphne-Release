<Window x:Class="DaphneGui.AddDiffState"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add a differentiation state" Height="129" Width="392">
    <Grid>
        <Label Content="Enter a State Name:" Height="28" HorizontalAlignment="Left" Margin="12,19,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="142,19,0,0" Name="txtStateName" VerticalAlignment="Top" Width="206" 
                 Text="{Binding Path=StateName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="273,48,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="192,48,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click"
                IsEnabled="{Binding ElementName=txtStateName, Path=Text.Length, Mode=OneWay}">
        </Button>
    </Grid>
</Window>
