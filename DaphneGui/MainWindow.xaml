                                                </WindowsFormsHost>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </docking:ToolWindow>
                    </docking:ToolWindowContainer>

